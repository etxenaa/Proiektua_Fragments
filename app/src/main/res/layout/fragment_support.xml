<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SupportFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".ProductManagementActivity">

        <!-- Título principal -->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="PRODUKTUAREN DATUAK"
            android:textColor="#002B5B"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Contenedor principal -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Campo Izena -->
                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Izena"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/izenaproduktuaa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#555555"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZáéíóúÁÉÍÓÚñÑ"
                    android:hint="Sartu izena"
                    android:inputType="text" />

                <!-- Campo Mota -->
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Mota"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerMota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Campo Jatorria -->

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Jatorria"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/jatorria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#555555"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZáéíóúÁÉÍÓÚñÑ"
                    android:hint="Sartu jatorria"
                    android:inputType="text" />

                <!-- Campo Osagarri Nagusiak -->
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Osagarri nagusia"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/osagarriNagusiakGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <CheckBox
                        android:id="@+id/checkBoxBerakatza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berakatza"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkboxGatza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gatza"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkboxOlioa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Olioa"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checboxArrautzak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arrautzak"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkboxTomatea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tomatea"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBoxGurina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gurina"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Campo Prezioa -->
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Prezioa"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/prezioa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#555555"
                    android:hint="Sartu prezioa"
                    android:inputType="numberDecimal" />

                <!-- Campo Eskuragarritasuna -->
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Eskuragarritasuna"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxEskuragarri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bai"
                        android:textColor="#333333"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBoxEzEskuragarri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Ez"
                        android:textColor="#333333"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Botón Gehitu -->
                <Button
                    android:id="@+id/gehituproduktua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#007ACC"
                    android:text="GEHITU"
                    android:textColor="#FFFFFF" />

                <!-- Logo -->
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>